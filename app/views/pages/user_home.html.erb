<h1>SUP USER</h1>

<% if current_user.residencies.present? %>
  <ul>
    <h3>Your residence information</h3>
    <li>
      <%= current_user.properties.last.name %>
    </li>
    <li>
      <%= current_user.properties.last.address_line1 %>
    </li>
    <li>
      <%= current_user.units.last.name %>
    </li>
  </ul>
  <%= link_to "New Payment", new_payment_path %>
<% end %>

<% if current_user.current_lease_payment %>
  <div class="row">
    <div class="col-8">
      <div class="card">
        <h2 class="card-header">
          current payment due
        </h2>

        <div class="card-body">
          <strong>
            due: <%=  current_user.current_lease_payment.due_date %>
          </strong>
          <strong>
            amount left: <%=  current_user.current_amount_owed %>
          </strong>

          <%= link_to "New Payment", new_payment_path, class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<% unless current_user.stripe_account_guid.present? %>
  <%= link_to "new plaid account", new_tenant_plaid_account_path %>
<% end %>
