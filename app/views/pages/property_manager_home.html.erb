<% if current_property_manager.is_company_admin? %>
  <% unless current_property_manager.company.stripe_account_guid.present? %>
    <div class="card alert alert-warning text-center">
      <div class="card-body">
        <h4 class="card-title">
          You must create an account to process payments
        </h4>
        <p class="card-text">
          before you can process any payments. You need to create an acocunt for payment processing
        </p>
        <%= link_to "Add Payment Processing",
          new_stripe_account_path,
          class: "btn btn-primary btn-warning" %>
      </div>
    </div>
  <% end %>
<% end %>

<div class="row mb-2">
  <div class="col-8">
    <div class="card ">
      <div class="card-body">
        <div class="container">
          <div class="row">
            <div class="col-1 text-center align-self-center">
              <i class="fa fa-user fa-3x"></i>
            </div>
            <div class="col-9">
              <h4>
                Account Information
              </h4>
              <p>
              <%= current_property_manager.name %>
              </p>
            </div>
            <div class="col-2 align-self-center">
              <%= link_to(edit_company_path(current_property_manager.company)) do %>
                <div class="btn btn-success">
                  <i class="fa fa-check"></i>
                  Congrats!
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row mb-2">
  <div class="col-8">
    <div class="card">
      <div class="card-body">
        <div class="container">
          <div class="row">
            <div class="col-1 text-center align-self-center">
              <i class="fa fa-address-card-o fa-3x"></i>
            </div>
            <div class="col-9">
              <h4>
                Company Information
              </h4>
              <p>
              <%= current_property_manager.company.name %>
              </p>
            </div>
            <div class="col-2 align-self-center">
              <%= link_to(edit_company_path(current_property_manager.company)) do %>
                <div class="btn btn-success">
                  <i class="fa fa-check"></i>
                  Congrats!
                </div>
              <% end%>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="row mb-2">
  <div class="col-8">
    <div class="card ">
      <div class="card-body">
        <h4>
          <i class="fa fa-home"></i>
          Properties
        </h4>
        <%= render partial: 'properties/table',
          locals: { properties: current_property_manager.company.properties }
        %>
      <%= link_to 'See All Properties', properties_path, class: 'btn btn-info' %>
      </div>
    </div>
  </div>
</div>
