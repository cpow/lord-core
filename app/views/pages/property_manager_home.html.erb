<% if current_property_manager.is_company_admin? %>
  <% unless current_property_manager.company.stripe_account_guid.present? %>
    <div class="card alert alert-warning text-center">
      <div class="card-body">
        <h4 class="card-title">
          You must create an account to process payments
        </h4>
        <p class="card-text">
        before you can process any payments. You need to create an acocunt for payment processing
        </p>
        <%= link_to "Add Payment Processing",
          new_stripe_account_path,
          class: "btn btn-primary btn-warning" %>
      </div>
    </div>
  <% end %>
<% end %>

<h3 class="text-center mt-3">Getting Started</h3>
<p class="text-center">Here is all the information you need for your company. Please edit this as you see fit</p>

<div class="card-deck text-center">
  <div class="card ">
    <div class="card-body">
      <div class="container">
        <div class="row">
          <div class="col">
            <h4>
              Banking
            </h4>
            <p>
            <i class="fa fa-bank fa-3x text-info"></i>
            </p>
            <p>
            <%= current_property_manager.name %>
            </p>
            <%= link_to(edit_company_path(current_property_manager.company)) do %>
              <div class="btn btn-light">
                Edit Bank Account
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card ">
    <div class="card-body">
      <div class="container">
        <div class="row">
          <div class="col">
            <h4>
              Account
            </h4>
            <p>
            <i class="fa fa-user fa-3x text-info"></i>
            </p>
            <p>
            <%= current_property_manager.name %>
            </p>
            <%= link_to(edit_company_path(current_property_manager.company)) do %>
              <div class="btn btn-light">
                Edit Account
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-body">
      <div class="container">
        <div class="row">
          <div class="col">
            <h4>
              Company
            </h4>
            <p>
            <i class="fa fa-drivers-license-o fa-3x text-info">
            </i>
            </p>
            <p>
            <%= current_property_manager.company.name %>
            </p>
            <%= link_to(edit_company_path(current_property_manager.company)) do %>
              <div class="btn btn-light">
                Edit Company
              </div>
            <% end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<h3 class="text-center mt-3">Properties</h3>
<p class="text-center">Make sure to add a property to get started. This is going to be awesome, you guys</p>

<%= render partial: 'properties/cards',
  locals: { properties: current_property_manager.company.properties }
%>
