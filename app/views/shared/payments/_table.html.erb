<table class="table table-striped">
  <thead class="thead-default">
    <tr>
      <th scope="row">ID</th>
      <th scope="row">amount</th>
    </tr>
  </thead>

  <tbody>
    <% payments.each do |payment| %>
      <tr>
        <td><%= payment.id %></td>
        <td><%= number_to_currency(payment.human_amount) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
