<div class="card-deck">
  <% properties.each do |property| %>
    <div class="card">
  <% if property.property_images.present? %>
    <div id="carouselControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner bg-dark text-center">
        <div class="carousel-item active">
          <%= image_tag property.property_images.first.image.url(:large),
            class: 'd-block',
            style: 'margin: 0 auto;height: 250px; max-width: 100%' %>
        </div>
      </div>
    </div>
  <% end %>
      <div class="card-body">
        <h4 class="card-title">
          <%= property.name %>
        </h4>
        <ul class="text-left">
          <li>
            units: 
            <%= property.units.count %>
          </li>
          <li>
            address: 
            <%= property.address_line1 %>
          </li>
        </ul>
        <%= link_to "Show", property_path(property), class: 'btn btn-light' %>
      </div>
    </div>
  <% end %>

  <div class="card text-center align-middle">
      <h4 class="card-header">
        <i class="fa fa-home fa-5x">
        </i>
      </h4>
    <div class="card-body">
      <p>
        Create a new Property. Creating a property is free. You can add units, residents, and create a payment schedule for your lease!
      </p>
      <%= link_to "New Property", new_property_path, class: 'btn btn-primary' %>
    </div>
  </div>
</div>
