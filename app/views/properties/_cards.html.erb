<div class="card-deck">
  <% properties.each do |property| %>
    <div class="card">
      <%= image_tag "house-stock.jpg", class: "card-img-top" %>
      <div class="card-body">
        <h4 class="card-title">
          <%= property.name %>
        </h4>
        <ul class="text-left">
          <li>
            units: 
            <%= property.units.count %>
          </li>
          <li>
            address: 
            <%= property.address_line1 %>
          </li>
        </ul>
        <%= link_to "Show", property_path(property), class: 'btn btn-light' %>
      </div>
    </div>
  <% end %>

  <div class="card text-center align-middle">
    <div class="card-body">
      <h4 class="card-title">
        New Property
      </h4>
      <p>
      <i class="fa fa-plus fa-3x text-info">
      </i>
      </p>
      <%= link_to "New Property", new_property_path, class: 'btn btn-light' %>
    </div>
  </div>
</div>
