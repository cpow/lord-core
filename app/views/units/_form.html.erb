<%= form_with(model: unit, local: true, url: property_units_path) do |form| %>
  <%= render partial: 'layouts/errors', locals: { object: unit } %>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :unit_description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :unit_name, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
