<h2>Available</h2>
<% @balance.available.each do |available| %>
<ul>
  <li>currency: <%= available.currency %></li>
  <li>amount: <%= available.amount %></li>
</ul>
<% end %>

<h2>Pending</h2>
<% @balance.pending.each do |pending| %>
<ul>
  <li>currency: <%= pending.currency %></li>
  <li>amount: <%= pending.amount %></li>
</ul>
<% end %>
